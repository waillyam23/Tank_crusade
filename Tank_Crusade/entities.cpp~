#ifndef __ENTITIES_CPP__
#define __ENTITIES_CPP__

#include <iostream>

#include "entities.h"

void initPlayer (player* P1)
{
    (*P1).hp=3;
    (*P1).score=0;
    (*P1).x = 20;
    (*P1).y = 201;
    (*P1).a = 0;
    (*P1).h.x=(*P1).x;
    (*P1).h.y=(*P1).y;
    (*P1).h.w=171.;
    (*P1).h.h=125.;
    (*P1).mspeed=0.01;
    (*P1).bspeed=0.1;
    (*P1).reload=10000;
    (*P1).munition=0;
    (*P1).canons=0;
    (*P1).elevation=0.523599;
    (*P1).depression=-0.0872665;
}

